{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/tabbar/index/index",
			"style": {
				"navigationBarTitleText": "极简记账",
				"disableScroll": true
			}

		}, {
			"path": "pages/tabbar/my/my",
			"style": {
				"navigationBarTitleText": "极简记账",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/tabbar/static/static",
			"style": {
				"navigationBarTitleText": "极简记账",
				"enablePullDownRefresh": false,
				"disableScroll": true
			}

		}, {
			"path": "pages/editRecord/editRecord",
			"style": {
				"navigationBarTitleText": "编辑记录",
				"enablePullDownRefresh": false,
				"disableScroll": true
			}

		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "极简记账",
		"navigationBarBackgroundColor": "#3eb575",
		"backgroundColor": "#F8F8F8",
		"usingComponents": {}
	},
	"tabBar": {
		"color": "#666",
		"selectedColor": "#3EB575",
		"backgroundColor": "#fff",
		"list": [{
				"pagePath": "pages/tabbar/index/index",
				"iconPath": "static/money.png",
				"selectedIconPath": "static/money_selected.png",
				"text": "记账"
			},
			{
				"pagePath": "pages/tabbar/static/static",
				"iconPath": "static/my.png",
				"selectedIconPath": "static/my_selected.png",
				"text": "我的"
			}, {
				"pagePath": "pages/tabbar/my/my",
				"iconPath": "static/static.png",
				"selectedIconPath": "static/money_selected.png",
				"text": "统计"
			}
		]
	}
}
